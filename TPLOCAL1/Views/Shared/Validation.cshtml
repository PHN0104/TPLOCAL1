@model TPLOCAL1.Models.FormulaireModel

@{
    ViewBag.Title = "ValidationFormulaire";
}

<!DOCTYPE html>
<html lang="fr">


<head>
    <link rel="stylesheet" href="~/ressources/styles.css">
    <title>HN - TP LOCAL</title>

</head>
<body>

    <div class="container">
        <div class="image">
            <img src="~/ressources/GroupeHN.png" alt="GroupeHN" />
        </div>
        <div class="text">
            <header>
                <h1>Page de Validation</h1>
            </header>
        </div>
    </div>

    <div class="container">
        <div class="nav">
            <ul>
                <li><a href="/Home/Index/Accueil">Accueil</a></li>
                <li><a href="/Home/Index/ListeAvis">Liste avis</a></li>
            </ul>
        </div>
        <div class="table">
            <p><strong>Informations personnelles :</strong></p>
            @Html.BeginForm("ValidationFormulaire", "Home", FormMethod.Get)
            {
				<table>
					<tr>
						<th>Nom</th>
						<th>@Html.DisplayNameFor(model => model.Nom)</th>
					</tr>
					<tr>
						<th>Prénom</th>
						<th>@Html.DisplayNameFor(model => model.Prenom)</th>
					</tr>
					<tr>
						<th>Sexe</th>
						<th>@Html.DisplayNameFor(model => model.Sexe)</th>
					</tr>
					<tr>
						<th>Adresse</th>
						<th>@Html.DisplayNameFor(model => model.Adresse)</th>
					</tr>
					<tr>
						<th>Code Postal</th>
						<th>@Html.DisplayNameFor(model => model.Code_postal)</th>
					</tr>
					<tr>
						<th>Ville</th>
						<th>@Html.DisplayNameFor(model => model.Ville)</th>
					</tr>
					<tr>
						<th>Adresse mail</th>
						<th>@Html.DisplayNameFor(model => model.Adresse_mail)</th>
					</tr>
				</table>
				<br />

				<p><strong>Informations formation suivie :</strong></p>
				<table>
					<tr>
						<th>Date début formation</th>
						<th>@Html.DisplayNameFor(model => model.Date)</th>
					</tr>
					<tr>
						<th>Formation suivie</th>
						<th>@Html.DisplayNameFor(model => model.Formation)</th>

						</th>
					</tr>
				</table>
				<br />

				<p><strong>Avis sur la formation :</strong></p>
				<table>
					<tr>
						<th>Formation COBOL</th>
						<th>@Html.DisplayNameFor(model => model.Avis1)</th>
					</tr>
					<tr>
						<th>Formation C#</th>
						<th>@Html.DisplayNameFor(model => model.Avis2)</th>
					</tr>
				</table>
            }
            

        </div>

    </div>

</body>
</html>
